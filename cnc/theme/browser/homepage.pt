<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="cnc.theme">
<body>

<metal:content-core fill-slot="main">
  <metal:content-core define-macro="content-core">
    <metal:field use-macro="python:context.widget('text', mode='view')">
      Body text
    </metal:field>
<span class="clear padding15"></span>
<h3 i18n:translate="homepage_recent_news">Recent News</h3>

<ul id="list">
<div class="col_1_3">
  <li><div class="news-title1" i18n:translate="">Bulletin</div>
    <tal:news_bulletin
     tal:repeat="item view/news_bulletin">
    <div class="news-list">
      <a href=""
       tal:attributes="href python:item[2];
                       title python:item[0]">
      <span tal:content="python:item[0]">Text</span><br />
      </a>
      <span class="news-date" tal:content="python:item[1]">Date</span>
    </div>
    </tal:news_bulletin>
    <p class="news-more"><a href="news/bulletin" target="_blank" title=""><img src="more-content.png" /></a></p>
  </li>
</div>
<div class="col_1_3">
  <li><div class="news-title2" i18n:translate="">Communion</div>
    <tal:news_communion
     tal:repeat="item view/news_communion">
    <div class="news-list">
      <a href=""
       tal:attributes="href python:item[2];
                       title python:item[0]">
      <span tal:content="python:item[0]">Text</span><br />
      </a>		   
      <span class="news-date" tal:content="python:item[1]">Date</span>
    </div>
    </tal:news_communion>
    <p class="news-more"><a href="news/communion" target="_blank" title=""><img src="more-content.png" /></a></p>
  </li>
</div>
<div class="col_1_3">
  <li><div class="news-title3" i18n:translate="">Meeting</div>
    <tal:news_meeting
     tal:repeat="item view/news_meeting">
    <div class="news-list">
      <a href=""
       tal:attributes="href python:item[2];
                       title python:item[0]">
      <span tal:content="python:item[0]">Text</span><br />
      </a>		   
      <span class="news-date" tal:content="python:item[1]">Date</span>
    </div>
    </tal:news_meeting>
    <p class="news-more"><a href="news/meeting" target="_blank" title=""><img src="more-content.png" /></a></p>
  </li>
</div>
<div class="col_1_3">
  <li><div class="news-title4" i18n:translate="">Board</div>
    <tal:news_board
     tal:repeat="item view/news_board">
    <div class="news-list">
      <a href=""
       tal:attributes="href python:item[2];
                       title python:item[0]">
      <span tal:content="python:item[0]">Text</span><br />
      </a>		   
      <span class="news-date" tal:content="python:item[1]">Date</span>
    </div>
    </tal:news_board>
    <p class="news-more"><a href="news/board" target="_blank" title=""><img src="more-content.png" /></a></p>
  </li>
</div>
<div class="col_1_3 last">
  <li><div class="news-title5" i18n:translate="">Christian</div>
    <tal:news_christian
     tal:repeat="item view/news_christian">
    <div class="news-list">
      <a href=""
       tal:attributes="href python:item[2];
                       title python:item[0]">
      <span tal:content="python:item[0]">Text</span><br />
      </a>		   
      <span class="news-date" tal:content="python:item[1]">Date</span>
    </div>
    </tal:news_christian>
    <p class="news-more"><a href="news/christian" target="_blank" title=""><img src="more-content.png" /></a></p>
  </li>
</div>
</ul>

  </metal:content-core>
</metal:content-core>

</body>
</html>
